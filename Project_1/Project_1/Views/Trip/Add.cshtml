@model Trip

@{
    string title = ViewBag.Action + " Trip";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StartDate">StartDate</label>
        <input asp-for="StartDate" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EndDate">EndDate</label>
        <input asp-for="EndDate" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Accomodations">Accomodations</label>
        <input asp-for="Accomodations" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ToDo">ToDo</label>
        <input asp-for="ToDo" class="form-control">
    </div>

    <input type="hidden" asp-for="TripId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>